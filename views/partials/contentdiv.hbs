{{!-- div to display tasks or routines (or elements in a routine?) --}}

<div>
    <div class="p-3 m-2">
        <h1 class="text-white text-center">
            {{!-- how to title which tab? --}}
        </h1>
    </div>

    <div>
        <ul class="list-group list-group-flush">
            {{#if isTasks}}
            {{!-- list tasks --}}
                {{#each task}}
                    <li class="list-group-item">
                        {{taskName}}
                        <button class="btn btn-outline-info float-right select-group" type="submit" data-id="{{this.id}}">DONE</button>
                    </li>
                {{/each}}
            {{#else if isRoutines}}
            {{!-- list routines --}}
                {{#each routine}}
                    <li class="list-group-item">
                        {{routineName}}
                        <button class="btn btn-outline-info float-right select-group" type="submit" data-id="{{this.id}}">DONE</button>
                    </li>
                {{/each}}
            {{else}}
            {{!-- list tasks assigned to selected routine --}}
                {{#each task}}
                    <li class="list-group-item">
                        {{taskName}}
                        <button class="btn btn-outline-info float-right select-group" type="submit" data-id="{{this.id}}">DONE</button>
                    </li>
                {{/each}}

            {{/if}}
        </ul>
    </div>
</div>