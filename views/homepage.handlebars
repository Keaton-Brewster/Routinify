{{> nav_bar}}

<a class="btn btn-small" href="/logout">LOGOUT</a>
<a class="btn btn-small" id="create">CREATE GROUP</a>


<div class="container">
    <div class="row">
        <div class="col-8">
            <form id="groupForm">
                <h2>Create a new group with a unique name</h2>
                <div class="mb-3">
                    <label for="newGroup" class="form-label">Group name</label>
                    <input type="text" class="form-control" id="newGroup">
                </div>
                <button type="submit" id="createGroup" class="btn btn-primary">Create Group</button>
            </form>
            <form id="userForm">
                <h2>Add users to <span class="newGroupName"></span></h2>
                <div class="mb-3">
                    <label for="newEmail" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="newEmail" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">This will be the email address this user will use to sign in
                    </div>
                </div>
                <div class="mb-3">
                    <label for="newUsername" class="form-label">Username</label>
                    <input type="text" class="form-control" id="newUsername" aria-describedby="usernameHelp">
                    <div id="usernameHelp" class="form-text">Give this user a username</div>
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">Password</label>
                    <input type="text" class="form-control" id="newPassword" aria-describedby="passwordHelp">
                    <div id="passwordHelp" class="form-text">Set this user's password</div>
                </div>
                <button type="submit" id="createUser" class="btn btn-primary">Add User</button>
            </form>
        </div>
    </div>
    <div class="row" id="finished">
        <div class="col-8">
            <p>Or finalize <span class="newGroupName"></span> to get started adding and assigning tasks:</p>
            <button type="submit" id="finishGroup" class="btn btn-primary">Done</button>
        </div>
    </div>
</div>





<ul>
    <h2>Your Groups</h2>
    {{#each groups}}
    <a class="btn btn-primary" href="/users/home/groups/{{id}}">{{id}}: {{name}}</a><br>
    {{/each}}
</ul>

<script type="text/javascript" src="/assets/js/homepage.js"></script>